<div id='remote-form'>
  <%= bootstrap_form_with model: @club_user do |f| %>
    <%= f.select :position, ClubUser.positions %>
    <div class='remote-form__actions'>
      <%= link_to club_user_path(@club_user), method: :delete, 'data-confirm': t_are_you_sure_to_remove_item_name(@club_user.user.name), title: t_crud('delete', ClubUser) do %>
        <i class="demo-icon icon-trash-empty text-danger" aria-hidden="true"></i>
      <% end %>
      <%= f.submit class: 'btn btn-primary'%>
    </div>
  <% end %>
</div>
