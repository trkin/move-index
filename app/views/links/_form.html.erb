<div id='remote-form'>
  <%= bootstrap_form_with model: @link, layout: :horizontal do |f| %>
    <%= f.hidden_field :linkable_id %>
    <%= f.hidden_field :linkable_type %>
    <%= f.select :kind, Link.kinds.keys.select { |k| k.start_with? @link.linkable_type.downcase }.map { |k| [Link.human_enum_name(:kind, k),k] } %>
    <%= f.text_field :url, placeholder: 'http://...' %>
    <div class='remote-form__actions'>
      <% unless @link.new_record? %>
        <%= link_to link_path(@link), method: :delete, 'data-confirm': t_are_you_sure_to_remove_item_name(@link.linkable_id), title: t_crud('delete', Link), class: 'btn btn-outline-danger' do %>
          <%= t('delete') %>
          <i class="demo-icon icon-trash-empty" aria-hidden="true"></i>
        <% end %>
      <% end %>
      <%= f.submit class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
