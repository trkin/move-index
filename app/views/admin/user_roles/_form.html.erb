<div id='remote-form'>
  <%= bootstrap_form_for @user_role, url: @user_role.new_record? ? admin_user_user_roles_path(@user_role.user) : admin_user_role_path(@user_role), remote: true, layout: :horizontal do |f| %>
    <%= f.select :role, options_for_select(UserRole.roles, selected: f.object.role) %>
    <div class='remote-form__actions'>
      <% unless @user_role.new_record? %>
        <%= link_to admin_user_role_path(@user_role), method: :delete, 'data-confirm': t_are_you_sure_to_remove_item_name(@user_role.role), title: t_crud('delete', UserRole) do %>
          <i class="demo-icon icon-trash-empty text-danger" aria-hidden="true"></i>
        <% end %>
      <% end %>
      <%= f.submit class: 'btn btn-primary'%>
    </div>
  <% end %>
</div>
