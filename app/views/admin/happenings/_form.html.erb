<div id='remote-form'>
  <%= bootstrap_form_for @happening, url: @happening.new_record? ? admin_happenings_path : admin_happening_path(@happening), remote: true, layout: :horizontal do |f| %>
    <%= f.text_field :name %>
    <%= f.date_field :start_date %>
    <%= f.date_field :end_date %>
    <%= f.text_field :website %>
    <%= f.select :repeating, Happening.repeatings.keys.map { |k| [Happening.human_enum_name(:repeating, k), k] } %>
    <div class='remote-form__actions'>
      <% unless @happening.new_record? %>
        <%= link_to admin_happening_path(@happening), method: :delete, 'data-confirm': t_are_you_sure_to_remove_item_name(@happening.name), title: t_crud('delete', Happening) do %>
          <i class="demo-icon icon-trash-empty text-danger" aria-hidden="true"></i>
        <% end %>
      <% end %>
      <%= f.submit class: 'btn btn-primary'%>
    </div>
  <% end %>
</div>
