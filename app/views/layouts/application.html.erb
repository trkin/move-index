<!DOCTYPE html>
<html>
  <head>
    <title>MoveResults</title>
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

    <%# Google Font %>
    <link href="https://fonts.googleapis.com/css?family=Josefin+Sans" rel="stylesheet">
  </head>

  <% if login_layout? %>
    <%= render 'layouts/login_layout' %>
  <% else %>
    <body>
      <ul class='nav'>
        <li class='nav-item px-1 dropdown'>
          <%= render 'layouts/choose_language' %>
        </li>
        <li class='nav-item px-1'>
          <% if current_user %>
            <strong><%= current_user.email %></strong>
            <%= link_to t('my_devise.sign_out'), destroy_user_session_path, method: :delete %>
          <% else %>
            <%= link_to t('my_devise.sign_in'), new_user_session_path %>
          <% end %>
        </li>
      </ul>
      <%= yield %>
      <%= render 'layouts/flash_notice_alert' %>
    </body>
  <% end %>
</html>
